<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="anticordev.group.anticoruption">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:name="anticordev.group.anticoruption.App"
        android:icon="@drawable/gerbb"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gerb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name="anticordev.group.anticoruption.screen.main.send.detail.SendActivity" />
        <activity android:name="anticordev.group.anticoruption.screen.main.savollar.SavollarActivity" />
        <activity android:name="anticordev.group.anticoruption.screen.main.oneId.OneActivity" />
        <activity android:name="anticordev.group.anticoruption.screen.main.aboutapp.AboutAppActivity" />

        <activity
            android:name="anticordev.group.anticoruption.screen.main.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name="anticordev.group.anticoruption.screen.main.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>